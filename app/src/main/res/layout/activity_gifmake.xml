<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:orientation="vertical"
            android:paddingBottom="@dimen/wh_16dp">

            <TextView
                android:id="@+id/tv_generate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_right"
                android:gravity="center"
                android:paddingLeft="@dimen/wh_4dp"
                android:paddingTop="@dimen/wh_4dp"
                android:paddingRight="@dimen/wh_8dp"
                android:paddingBottom="@dimen/wh_4dp"
                android:text="生成GIF图"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_right"
                    android:gravity="center"
                    android:paddingLeft="@dimen/wh_4dp"
                    android:paddingTop="@dimen/wh_4dp"
                    android:paddingRight="@dimen/wh_8dp"
                    android:paddingBottom="@dimen/wh_4dp"
                    android:text="fps"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et_fps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="fps"
                    android:inputType="number"
                    android:minEms="3"
                    android:paddingLeft="@dimen/wh_4dp"
                    android:paddingTop="@dimen/wh_4dp"
                    android:paddingRight="@dimen/wh_8dp"
                    android:paddingBottom="@dimen/wh_4dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_right"
                    android:gravity="center"
                    android:paddingLeft="@dimen/wh_4dp"
                    android:paddingTop="@dimen/wh_4dp"
                    android:paddingRight="@dimen/wh_8dp"
                    android:paddingBottom="@dimen/wh_4dp"
                    android:text="width"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="1280"
                    android:inputType="number"
                    android:minEms="4"
                    android:paddingLeft="@dimen/wh_4dp"
                    android:paddingTop="@dimen/wh_4dp"
                    android:paddingRight="@dimen/wh_8dp"
                    android:paddingBottom="@dimen/wh_4dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_right"
                    android:gravity="center"
                    android:paddingLeft="@dimen/wh_4dp"
                    android:paddingTop="@dimen/wh_4dp"
                    android:paddingRight="@dimen/wh_8dp"
                    android:paddingBottom="@dimen/wh_4dp"
                    android:text="height"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="720"
                    android:inputType="number"
                    android:minEms="4"
                    android:paddingLeft="@dimen/wh_4dp"
                    android:paddingTop="@dimen/wh_4dp"
                    android:paddingRight="@dimen/wh_8dp"
                    android:paddingBottom="@dimen/wh_4dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_preview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/wh_4dp"
                android:layout_weight="1"
                android:background="@drawable/radius_right"
                android:gravity="center"
                android:paddingLeft="@dimen/wh_4dp"
                android:paddingTop="@dimen/wh_4dp"
                android:paddingRight="@dimen/wh_8dp"
                android:paddingBottom="@dimen/wh_4dp"
                android:text="预览"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/wh_4dp"
                android:layout_weight="1"
                android:background="@drawable/radius_right"
                android:gravity="center"
                android:paddingLeft="@dimen/wh_4dp"
                android:paddingTop="@dimen/wh_4dp"
                android:paddingRight="@dimen/wh_8dp"
                android:paddingBottom="@dimen/wh_4dp"
                android:text="再来一张"
                android:textColor="@color/white" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
